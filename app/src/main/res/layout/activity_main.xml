<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/activity_main_fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/activity_main_fragment_holder"/>

    <TextView
        android:id="@+id/activity_main_index_fruit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_fruit_checked"
        android:text="水果"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingBottom="4dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/activity_main_index_meat"/>

    <TextView
        android:id="@+id/activity_main_index_meat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_meat_checked"
        android:text="肉类"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingBottom="4dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_index_fruit"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/activity_main_index_fruit"
        app:layout_constraintRight_toLeftOf="@id/activity_main_index_vegetables"/>

    <TextView
        android:id="@+id/activity_main_index_vegetables"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_vegetables_checked"
        android:text="蔬菜"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingBottom="4dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_index_meat"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/activity_main_index_meat"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>